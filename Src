import { z } from "zod";

export const VehicleConfigSchema = z.object({
  type: z.enum(["civilian","military","hypercar"]).default("civilian"),
  power: z.enum(["gas","diesel","electric","solar"]).default("gas"),
  sixBySix: z.boolean().default(false),
  armor: z.number().min(0).max(1).default(0),
  wheelScale: z.number().min(0.8).max(1.6).default(1),
  lift: z.number().min(0).max(0.5).default(0),
  resealTires: z.boolean().default(false),
  pepperSpray: z.boolean().default(false),
  tazerHandles: z.boolean().default(false),
  sleeper: z.boolean().default(false),
  snorkels: z.boolean().default(false),
  tacticalLights: z.boolean().default(false)
});
export type VehicleConfig = z.infer<typeof VehicleConfigSchema>;

export type CostEstimate = {
  factory: number;
  retail: number;
  fleet: number;
};

export type BlueprintPart = {
  id: number;
  name: string;
  status: "Ready" | "Draft";
  spec: string;
};

export type MarketingPack = {
  productName: string;
  tagline: string;
  blurb: string;
  socials: string[];
};

export type TelemetryPoint = {
  t: number; // seconds
  v: number; // speed (m/s)
  a: number; // acceleration (m/s^2)
  s: number; // distance (m)
};
